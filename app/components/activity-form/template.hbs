{{!-- Activiy creation form --}}
{{yield}}

<div class="activity-form">
  <form>
    <h4>What action did you take today?</h4>
    <div>
      <button class="bike" {{action 'selectBike'}}>Ride a Bike</button> 
      {{input placeholder='Name' value=form.name}}
      {{input placeholder='Category' value=form.category}}
      {{input placeholder='Value' value=form.value}}<br>
    </div>
    <button class="btn btn-primary" {{action 'createActivity'}}>Submit</button>
  </form>
</div>
